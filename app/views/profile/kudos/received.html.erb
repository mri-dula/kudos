<% content_for :breadcrumbs do %>
    <ol class="breadcrumb">
        <li><%= link_to I18n.t('navbar.home'), root_path %></li>
        <li class="active"><%= I18n.t('navbar.kudos_received') %></li>
    </ol>
<% end %>
<h3><%= I18n.t('navbar.kudos_received') %> (<%= current_user.employee.kudos_received.count %>)</h3>
<% if @kudos.any? then %>
    <%= render :partial => 'kudos/list', :locals => { :type => 'from' } %>
<% else %>
    <%= I18n.t 'messages.no_results_found' %>
<% end %>