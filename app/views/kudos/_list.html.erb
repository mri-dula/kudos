<% @kudos.each_with_index do |kudo, i| %>
    <% if (i + 1) % 3 == 1 then %>
        <div class="row">
    <% end %>
    <%= content_tag :div, :class => 'col-sm-4' do  %>
        <%= render :partial => 'kudos/single', :locals => { :type => type, :kudo => kudo } %>
    <% end %>
    <% if (i + 1) % 3 == 0 then %>
        </div>
    <% end %>
<% end %>
<% if @kudos.length % 3 > 0 then %>
    </div>
<% end %>